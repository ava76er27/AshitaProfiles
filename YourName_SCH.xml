	<inputcommands>
		<cmd input="/stand">
			<setvar name="Gear" value="0" />
			<setvar name="Mem" value="$Gear" />
			<equip set="Stand" />
		</cmd>
		<cmd input="/sc">
				<setvar name="Gear" value="1" />
				<setvar name="Mem" value="$Gear" />
			<equip set="Nuke" />
		</cmd>
		<cmd input="/dark">
				<setvar name="Gear" value="2" />
				<setvar name="Mem" value="$Gear" />				
			<equip set="Dark" />
		</cmd>
		<cmd input="/rest">
				<setvar name="Gear" value="3" />
				<setvar name="Mem" value="$Gear" />				
			<equip set="Resting" />
		</cmd>		
	</inputcommands>
	
	<idlegear>
	    <if advanced="$init=0">
				<addtochat color="$Color">$Buffer</addtochat>		
				<addtochat color="$Color">ava76er27/Profiles: Scholar 1.01</addtochat>
				<addtochat color="$Color">Website:https://github.com/ava76er27</addtochat>
				<addtochat color="$Color">$Buffer</addtochat>		
			<setvar name="init" value="1" />
			<command>/exec sch.txt</command>
			<setvar name="lockstyleset" value="99" />
			<if p_mainjob="SCH"><setvar name="macrobook" value="07" /></if>
			<setvar name="macropage" value="1" />

			<command delay="1500">/macro book $macrobook</command>
			<command delay="3000">/macro set $macropage</command>
			<command delay='6000'>/lockstyleset $lockstyleset</command>
		</if>	
						<!---<addtochat color="57">Toggle $toggle Gear $Gear Mem $Mem</addtochat>	--->
		<if advanced="$toggle=0"><equip set="Stand" />
						<!---<addtochat color="57">Toggle $toggle Gear $Gear</addtochat>		--->	
		</if>
		<if p_status="resting">
			<setvar name="Gear" value="3" /><equip set="Resting" />
		</if>
		<else><setvar name="Gear" value="$Mem" /></else>
		<if p_status="engaged">
				<setvar name="toggle" value="1" />		
			<if advanced="$Gear=0"><equip set="Stand" /></if>		
			<if advanced="$Gear=1"><equip set="Nuke" /></if>
			<if advanced="$Gear=2"><equip set="Dark" /></if>
			<if advanced="$Gear=3"><equip set="Resting" /></if>				
		</if>
		<elseif>
				<setvar name="toggle" value="0" />		
			<if advanced="$Gear=0"><equip set="Stand" /></if>		
			<if advanced="$Gear=1"><equip set="Nuke" /></if>
			<if advanced="$Gear=2"><equip set="Dark" /></if>
			<if advanced="$Gear=3"><equip set="Resting" /></if>				
		</elseif>
