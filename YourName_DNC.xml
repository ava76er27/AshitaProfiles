<ashitacast>
	<settings>
		<buffupdate>true</buffupdate>
		<statusupdate>true</statusupdate>
		<hpupdate>true</hpupdate>
		<autoupdate>true</autoupdate>
	</settings>
	
	<variables>
        <var name="init">0</var>
		<var name="macrobook">1</var>
		<var name="macropage">1</var>
		<var name="lock">100</var>
        <var name="toggle">0</var>		
		<var name="Gear">0</var>
		<var name="Color">57</var>
		<var name="Buffer">===============</var>	
	</variables>	

	<sets>
		<set name="Resting">
		</set>
		
		<set name="Stand">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Focal Orb</ammo>
			<head>Skormoth Mask</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Limbo Trousers</legs>
			<feet>Heidrek Boots</feet>
			<neck>Sanctity Necklace</neck>
			<waist>Warwolf Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Sheltered Ring</ring1>
			<ring2>Woltaris Ring</ring2>
			<back>Solemnity Cape</back>
		</set>
		
		<set name="Evasion">
		</set>
		
		<set name="PDT"><!--- PDT Max evasion and FC --->
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Imp. Wing Hairpin</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Heidrek Brais</legs>
			<feet>Heidrek Boots</feet>
			<neck>Cloud Hairpin +1</neck>
			<waist>Survival Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Vengeful Ring</ring1>
			<ring2>Lunette Ring +1</ring2>
			<back>Toetapper Mantle</back>	
		</set>
		<set name="MDT">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Heidrek Mask</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Limbo Trousers</legs>
			<feet>Heidrek Boots</feet>
			<neck>Sanctity Necklace</neck>
			<waist>Warwolf Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Sheltered Ring</ring1>
			<ring2>Vengeful Ring</ring2>
			<back>Solemnity Cape</back>
		</set>
		
		<set name="THProc">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Wh. Rarab Cap +1</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Heidrek Brais</legs>
			<feet>Heidrek Boots</feet>
			<neck>Cloud Hairpin +1</neck>
			<waist>Survival Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Vengeful Ring</ring1>
			<ring2>Lunette Ring +1</ring2>
			<back>Toetapper Mantle</back>		
		</set>
		
		<set name="FastCast">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Heidrek Mask</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Heidrek Brais</legs>
			<feet>Heidrek Boots</feet>
			<neck>Cloud Hairpin +1</neck>
			<waist>Survival Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Vengeful Ring</ring1>
			<ring2>Prolix Ring</ring2>
			<back>Toetapper Mantle</back>
		</set>
		<set name="Waltz">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Imp. Wing Hairpin</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Heidrek Brais</legs>
			<feet>Heidrek Boots</feet>
			<neck>Cloud Hairpin +1</neck>
			<waist>Survival Belt</waist>
			<ear1>Infused Earring</ear1>
			<ear2>Megasco Earring</ear2>
			<ring1>Valseur's Ring</ring1>
			<ring2>Prolix Ring</ring2>
			<back>Toetapper Mantle</back>
		</set>
		
		<set name="Movement">
			<main>Enchufla</main>
			<sub>Rhadamanthus</sub>
			<ammo>Vanir Battery</ammo>
			<head>Heidrek Mask</head>
			<body>Heidrek Harness</body>
			<hands>Heidrek Gloves</hands>
			<legs>Heidrek Brais</legs>
			<feet>Heidrek Boots</feet>
			<neck>Sanctity Necklace</neck>
			<waist>Warwolf Belt</waist>
			<ear1 augment="S560011293">Moonshade Earring</ear1>
			<ear2>Heartseeker Earring</ear2>
			<ring1>Rajas Ring</ring1>
			<ring2>Setae Ring</ring2>
			<back>Senuna's Mantle</back>
		</set>
        <include>
		</include>
	</sets>

	<inputcommands>
		<cmd input="/stand">
				<setvar name="Gear" value="0" />
			<equip set="Stand" />
		</cmd>	
		<cmd input="/pdt">
				<setvar name="Gear" value="1" />
			<equip set="PDT" />
		</cmd>
		<cmd input="/mdt">
				<setvar name="Gear" value="2" />
			<equip set="MDT" />
		</cmd>
		<cmd input="/th">
				<setvar name="Gear" value="3" />
			<equip set="THProc" />
		</cmd>		
	</inputcommands>

	<idlegear>
	    <if advanced="$init=0">
			<setvar name="init" value="1" />
			<command>/exec ratava/dnc.txt</command>
			<setvar name="lock" value="99" />
			<if p_mainjob="DNC"><setvar name="macrobook" value="11" /></if>
			<if p_subjob="NIN"><setvar name="macropage" value="2" /></if>
			<elseif p_subjob="THF"><setvar name="macropage" value="3" /></elseif>
			<else><setvar name="macropage" value="1" /></else>

			<command delay="1500">/macro book $macrobook</command>
			<command delay="3000">/macro set $macropage</command>
			<command delay='6000'>/lockstyleset $lock</command>
		</if>
			
		<if eq_rring="Facility Ring"><equip lock="true"><rring>Facility Ring</rring></equip></if>
		<if eq_rring="Trizek Ring"><equip lock="true"><rring>Trizek Ring</rring></equip></if>
		<if eq_rring="Empress Band"><equip lock="true"><rring>Empress Band</rring></equip></if>
		<if eq_rring="Caliber Ring"><equip lock="true"><rring>Caliber Ring</rring></equip></if>
		<if eq_rring="Echad Ring"><equip lock="true"><rring>Echad Ring</rring></equip></if>
		<if eq_rring="Warp Ring"><equip lock="true"><rring>Warp Ring</rring></equip></if>
		<if eq_rring="Dim. Ring (Holla)"><equip lock="true"><rring>Dim. Ring (Holla)</rring></equip></if>
		<if eq_rring="Emporox's Ring"><equip lock="true"><rring>Emporox's Ring</rring></equip></if>		
		<if eq_back="Aptitude Mantle"><equip lock="true"><back>Aptitude Mantle</back></equip></if>
		<if eq_ear2="Reraise Earring"><equip lock="true"><ear2>Reraise Earring</ear2></equip></if>
		<if eq_head="Reraise Hairpin"><equip lock="true"><head>Reraise Hairpin</head></equip></if>
		<if eq_neck="Airmid's Gorget"><equip lock="true"><neck>Airmid's Gorget</neck></equip></if>
		
						<!---<addtochat color="57">Toggle $toggle Gear $Gear</addtochat>		--->
		<if advanced="$toggle=0"><equip set="Stand" />
						<!---<addtochat color="57">Toggle $toggle Gear $Gear</addtochat>		--->	
		</if>			
		<if p_status="engaged">
				<setvar name="toggle" value="1" />
			<if advanced="$Gear=0"><equip set="Stand" /></if>				
			<if advanced="$Gear=1"><equip set="PDT" /></if>
			<if advanced="$Gear=2"><equip set="MDT" /></if>				
			<if advanced="$Gear=3"><equip set="THProc" /></if>		
	
		</if>
		<elseif>
				<setvar name="toggle" value="0" />			
			<!---<if advanced="$Gear=0"><equip set="PDT" /></if>
			<if advanced="$Gear=2"><equip set="MDT" /></if>	
			<if advanced="$Gear=2"><equip set="THProc" /></if>--->		
		</elseif>
	</idlegear>

	<preranged>
		<equip set="Ranged" />
	</preranged>

	<premagic>
		<if ad_name="Utsusemi*">
				<addtochat color="$Color">$Buffer [Equipping Fast Cast Set!] $Buffer</addtochat>			
			<equip set="PDT" />
		</if>
		<else><equip set="FastCast" /></else>
	</premagic>
	

	<midmagic>
	</midmagic>

	<jobability>                           
		<if ad_name="Flee|Hide|Steal|Mug">
			<equip set="PDT" />
		</if>
		<if ad_name="Curing*|Divine*">
			<equip set="Waltz" />
		</if>
		<elseif ad_name="Spectral Jig">
			<equip set="FastCast" />
		</elseif>
	</jobability>

	<weaponskill>
		<if ad_name="Exenterator">
			<gearlock delay="10" />
			<equip set="AGIws" />
				<addtochat color="$Color">$Buffer [Equipping AGIws Set!] $Buffer</addtochat>		
		</if>
		<if ad_name="Evisceration">
			<gearlock delay="10" />
			<equip set="DEXws" />
				<addtochat color="$Color">$Buffer [Equipping DEXws Set!] $Buffer</addtochat>		
		</if>
		<if ad_name="Rudra's Storm"><equip set="DEXws" /></if>
		<if  ad_name="Aeolian Edge"><equip set="DEXws" />  </if>		
	</weaponskill>
</ashitacast>